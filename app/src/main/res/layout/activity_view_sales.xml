<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/error_container_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/shopify_demo_try_again_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/textview_margin_vertical"
            android:paddingLeft="@dimen/textview_margin_horizontal"
            android:paddingRight="@dimen/textview_margin_horizontal"
            android:paddingTop="@dimen/textview_margin_vertical"
            android:text="@string/try_again_header_text"/>

        <Button
            android:layout_marginTop="@dimen/button_margin_vertical"
            android:layout_centerHorizontal="true"
            android:id="@+id/shopify_demo_try_again_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopify_demo_try_again_text"
            android:paddingBottom="@dimen/button_margin_vertical"
            android:paddingLeft="@dimen/button_margin_horizontal"
            android:paddingRight="@dimen/button_margin_horizontal"
            android:paddingTop="@dimen/button_margin_vertical"
            android:text="@string/try_again"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/shopify_demo_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:id="@+id/shopify_demo_usd_revenue_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/textview_margin_vertical"
            android:paddingLeft="@dimen/textview_margin_horizontal"
            android:paddingRight="@dimen/textview_margin_horizontal"
            android:paddingTop="@dimen/textview_margin_vertical"
            tools:text="Revenue (USD): $123456.00 "/>

        <TextView
            android:id="@+id/shopify_demo_cad_revenue_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/textview_margin_vertical"
            android:paddingLeft="@dimen/textview_margin_horizontal"
            android:paddingRight="@dimen/textview_margin_horizontal"
            android:paddingTop="@dimen/textview_margin_vertical"
            tools:text="Revenue (CAD): $123456.00"/>

        <TextView
            android:id="@+id/shopify_demo_keyboardsold_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/textview_margin_vertical"
            android:paddingLeft="@dimen/textview_margin_horizontal"
            android:paddingRight="@dimen/textview_margin_horizontal"
            android:paddingTop="@dimen/textview_margin_vertical"
            tools:text="Aerodynamic Cotton Keyboards Sold: 12345"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/shopify_demo_load_more_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/button_margin_vertical"
            android:paddingLeft="@dimen/button_margin_horizontal"
            android:paddingRight="@dimen/button_margin_horizontal"
            android:paddingTop="@dimen/button_margin_vertical"
            android:text="@string/load_more_button"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/progressbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_black_alpha_55"
        tools:visibility="gone">

        <ProgressBar
            style="@style/ShopifyDemoProgressBar"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>
